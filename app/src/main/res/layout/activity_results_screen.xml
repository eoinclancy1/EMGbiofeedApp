<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eoinclancy.bluetoothrxtx.ResultsScreen"
    android:background="@drawable/wallpaperoptionlighter">


    <com.eoinclancy.bluetoothrxtx.GifView
        android:id="@+id/gif"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/ResultMessage"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewoutline"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/highlightsTitle"
            android:text="Highlights From This Session"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/highlightsTitle"
                android:id="@+id/jointAngle"
                android:textSize="20sp"
                android:text="Max Joint Angle: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/jointAngle"
                android:id="@+id/vmoLeft"
                android:textSize="20sp"
                android:text="VMO Left Max: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/calfLeft"
                android:layout_below="@id/vmoLeft"
                android:textSize="20sp"
                android:text="Calf Left Max: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/highlightsTitle"
                android:id="@+id/angleDiff"
                android:textSize="20sp"
                android:text="Max difference in joint angles: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/angleDiff"
                android:id="@+id/vmoRight"
                android:textSize="20sp"
                android:text="VMO Right Max: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/vmoRight"
                android:id="@+id/calfRight"
                android:textSize="20sp"
                android:text="Calf Right Max: "/>
    </RelativeLayout>

    <Button
        android:text="Send Results to Trainer via Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/sendEmail"
        android:layout_marginBottom="86dp"
        android:background="#EEEEEE"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>

</RelativeLayout>


</LinearLayout>
